<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/path"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/path"
        android:backgroundTint="@color/black"
        android:layout_marginTop="50dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/vector3"
        android:backgroundTint="@color/black"
        android:layout_marginTop="80"/>
    <TextView
        android:id="@+id/berhasil"
        android:layout_below="@+id/path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berhasil Disimpan"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/berhasil2"
        android:layout_below="@+id/berhasil"
        android:layout_width="242dp"
        android:layout_height="54dp"
        android:text="Terima kasih, laporan Anda membantu kami dalam melakukan penanganan kasus secara tepat."
        android:textSize="12dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/ok"
        android:layout_below="@id/berhasil2"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bttnhijua"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:text="ok"/>






</RelativeLayout>